{
  "name": "@holoscript/ik",
  "version": "1.0.0",
  "description": "Inverse Kinematics for HoloScript - FABRIK, CCD, constraints, full-body IK for VR avatars",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./solvers": {
      "types": "./dist/solvers.d.ts",
      "import": "./dist/solvers.js",
      "require": "./dist/solvers.cjs"
    },
    "./constraints": {
      "types": "./dist/constraints.d.ts",
      "import": "./dist/constraints.js",
      "require": "./dist/constraints.cjs"
    },
    "./fullbody": {
      "types": "./dist/fullbody.d.ts",
      "import": "./dist/fullbody.js",
      "require": "./dist/fullbody.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "echo 'No tests yet' && exit 0",
    "lint": "eslint src",
    "clean": "rimraf dist"
  },
  "keywords": [
    "holoscript",
    "ik",
    "inverse-kinematics",
    "fabrik",
    "ccd",
    "avatar",
    "vr",
    "animation"
  ],
  "author": "HoloScript Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.5.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
