{
  "name": "@holoscript/state-sync",
  "version": "1.0.0",
  "description": "Distributed state synchronization - CRDTs and conflict-free data structures for VR",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./crdt": {
      "import": {
        "types": "./dist/crdt.d.ts",
        "default": "./dist/crdt.js"
      },
      "require": {
        "types": "./dist/crdt.d.cts",
        "default": "./dist/crdt.cjs"
      }
    },
    "./sync": {
      "import": {
        "types": "./dist/sync.d.ts",
        "default": "./dist/sync.js"
      },
      "require": {
        "types": "./dist/sync.d.cts",
        "default": "./dist/sync.cjs"
      }
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "holoscript",
    "state-sync",
    "crdt",
    "distributed",
    "vr",
    "conflict-free",
    "synchronization"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  }
}
