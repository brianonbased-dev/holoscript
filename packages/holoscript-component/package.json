{
  "name": "@holoscript/component",
  "version": "0.8.0",
  "description": "HoloScript WASM Component for WASI Preview 3",
  "license": "MIT",
  "type": "module",
  "main": "dist/holoscript.js",
  "types": "dist/holoscript.d.ts",
  "exports": {
    ".": {
      "import": "./dist/holoscript.js",
      "types": "./dist/holoscript.d.ts"
    },
    "./component": {
      "import": "./dist/holoscript.component.wasm"
    }
  },
  "files": [
    "dist/",
    "wit/",
    "README.md"
  ],
  "scripts": {
    "build:rust": "cargo build --release --target wasm32-wasip1",
    "build:component": "wasm-tools component new target/wasm32-wasip1/release/holoscript_component.wasm --adapt wasi_snapshot_preview1.command.wasm -o dist/holoscript.component.wasm",
    "build:jco": "jco transpile dist/holoscript.component.wasm -o dist --name holoscript",
    "build:types": "jco types dist/holoscript.component.wasm -o dist/holoscript.d.ts",
    "build": "npm run build:rust && npm run build:component && npm run build:jco && npm run build:types",
    "test": "cargo test",
    "test:js": "node --experimental-wasm-component-model test/test.mjs",
    "clean": "cargo clean && rimraf dist",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@bytecodealliance/jco": "^1.4.0",
    "rimraf": "^5.0.0"
  },
  "keywords": [
    "holoscript",
    "wasm",
    "component-model",
    "wasi",
    "vr",
    "xr",
    "3d"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/holoscript/holoscript.git",
    "directory": "packages/holoscript-component"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
