{
  "name": "holoscript-vscode",
  "displayName": "HoloScript Enhanced",
  "description": "Language support for HoloScript+ with AI integration, Spatial Profiling, and Live Preview",
  "version": "3.0.0",
  "publisher": "holoscript",
  "icon": "icons/holoscript-logo.png",
  "author": "Brian X Base Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/brianonbased-dev/Holoscript.git",
    "directory": "packages/vscode-extension"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization"
  ],
  "keywords": [
    "holoscript",
    "vr",
    "ar",
    "spatial computing",
    "3d",
    "webxr"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:holoscript",
    "onLanguage:holoscriptplus"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "HoloScript MCP",
      "properties": {
        "holoscript.mcp.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable MCP orchestrator integration for IDE agents."
        },
        "holoscript.mcp.orchestratorUrl": {
          "type": "string",
          "default": "http://localhost:5567",
          "description": "MCP orchestrator base URL."
        },
        "holoscript.mcp.apiKey": {
          "type": "string",
          "default": "",
          "description": "MCP API key for registration and heartbeats."
        },
        "holoscript.mcp.heartbeatSeconds": {
          "type": "number",
          "default": 20,
          "minimum": 10,
          "description": "Heartbeat interval in seconds."
        },
        "holoscript.mcp.visibility": {
          "type": "string",
          "enum": [
            "public",
            "private"
          ],
          "default": "public",
          "description": "Visibility of this IDE agent in the orchestrator registry."
        },
        "holoscript.mcp.workspaceId": {
          "type": "string",
          "default": "holoscript",
          "description": "Workspace ID to register under."
        },
        "holoscript.formatOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Enable auto-formatting on save."
        },
        "holoscript.formatOnSaveTimeout": {
          "type": "number",
          "default": 1000,
          "description": "Timeout for formatting on save in milliseconds."
        },
        "holoscript.ai.enableAutoSuggest": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI auto-suggestions while typing."
        },
        "holoscript.collaboration.serverUrl": {
          "type": "string",
          "default": "wss://collab.holoscript.dev",
          "description": "WebSocket URL for collaboration server."
        },
        "holoscript.collaboration.autoJoin": {
          "type": "boolean",
          "default": false,
          "description": "Automatically join collaboration sessions from shared links."
        },
        "holoscript.collaboration.showCursors": {
          "type": "boolean",
          "default": true,
          "description": "Show other participants' cursors."
        },
        "holoscript.collaboration.showSelections": {
          "type": "boolean",
          "default": true,
          "description": "Show other participants' selections."
        },
        "holoscript.collaboration.showNames": {
          "type": "boolean",
          "default": true,
          "description": "Show participant names above cursors."
        },
        "holoscript.git.enableSemanticDiff": {
          "type": "boolean",
          "default": true,
          "description": "Enable semantic diff for HoloScript files."
        },
        "holoscript.git.enable3DPreview": {
          "type": "boolean",
          "default": true,
          "description": "Enable 3D diff preview."
        },
        "holoscript.git.formatOnCommit": {
          "type": "boolean",
          "default": true,
          "description": "Auto-format HoloScript files on commit."
        },
        "holoscript.git.validateOnCommit": {
          "type": "boolean",
          "default": true,
          "description": "Validate HoloScript syntax on commit."
        },
        "holoscript.git.showInlineDiff": {
          "type": "boolean",
          "default": true,
          "description": "Show inline diff decorations in editor."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "holohub",
          "title": "HoloHub",
          "icon": "icons/holoscript.svg"
        }
      ]
    },
    "views": {
      "holohub": [
        {
          "id": "holohub.assets",
          "name": "Marketplace"
        },
        {
          "id": "holoscript.diffVisualization",
          "name": "Diff Preview",
          "type": "webview"
        }
      ]
    },
    "languages": [
      {
        "id": "holoscript",
        "aliases": [
          "HoloScript",
          "hosl"
        ],
        "extensions": [
          ".holo"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/holoscript.svg",
          "dark": "./icons/holoscript.svg"
        }
      },
      {
        "id": "holoscriptplus",
        "aliases": [
          "HoloScript+",
          "hsplus"
        ],
        "extensions": [
          ".hsplus",
          ".hs"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/holoscript-plus.svg",
          "dark": "./icons/holoscript-plus.svg"
        }
      }
    ],
    "iconThemes": [
      {
        "id": "holoscript-icons",
        "label": "HoloScript Icons",
        "path": "./icons/icon-theme.json"
      }
    ],
    "grammars": [
      {
        "language": "holoscript",
        "scopeName": "source.holoscript",
        "path": "./syntaxes/holoscript.tmLanguage.json"
      },
      {
        "language": "holoscriptplus",
        "scopeName": "source.holoscript",
        "path": "./syntaxes/holoscript.tmLanguage.json"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "holoscript",
        "scopes": {
          "decorator": [
            "entity.name.tag.trait.holoscript"
          ],
          "decorator.defaultLibrary": [
            "entity.name.tag.trait.builtin.holoscript"
          ],
          "keyword": [
            "keyword.control.holoscript"
          ],
          "keyword.defaultLibrary": [
            "keyword.other.holoscript"
          ],
          "class": [
            "entity.name.type.class.holoscript"
          ],
          "class.declaration": [
            "entity.name.type.class.declaration.holoscript"
          ],
          "namespace": [
            "entity.name.namespace.holoscript"
          ],
          "property": [
            "variable.other.property.holoscript"
          ],
          "variable": [
            "variable.other.holoscript"
          ],
          "function": [
            "entity.name.function.holoscript"
          ],
          "function.defaultLibrary": [
            "support.function.builtin.holoscript"
          ],
          "string": [
            "string.quoted.double.holoscript"
          ],
          "number": [
            "constant.numeric.holoscript"
          ],
          "operator": [
            "keyword.operator.holoscript"
          ],
          "comment": [
            "comment.line.holoscript"
          ]
        }
      },
      {
        "language": "holoscriptplus",
        "scopes": {
          "decorator": [
            "entity.name.tag.trait.holoscript"
          ],
          "decorator.defaultLibrary": [
            "entity.name.tag.trait.builtin.holoscript"
          ],
          "keyword": [
            "keyword.control.holoscript"
          ],
          "keyword.defaultLibrary": [
            "keyword.other.holoscript"
          ],
          "class": [
            "entity.name.type.class.holoscript"
          ],
          "class.declaration": [
            "entity.name.type.class.declaration.holoscript"
          ],
          "namespace": [
            "entity.name.namespace.holoscript"
          ],
          "property": [
            "variable.other.property.holoscript"
          ],
          "variable": [
            "variable.other.holoscript"
          ],
          "function": [
            "entity.name.function.holoscript"
          ],
          "function.defaultLibrary": [
            "support.function.builtin.holoscript"
          ],
          "string": [
            "string.quoted.double.holoscript"
          ],
          "number": [
            "constant.numeric.holoscript"
          ],
          "operator": [
            "keyword.operator.holoscript"
          ],
          "comment": [
            "comment.line.holoscript"
          ]
        }
      }
    ],
    "snippets": [
      {
        "language": "holoscript",
        "path": "./snippets/holoscript.json"
      },
      {
        "language": "holoscriptplus",
        "path": "./snippets/holoscript.json"
      }
    ],
    "commands": [
      {
        "command": "holoscript.openPreview",
        "title": "Open Preview",
        "category": "HoloScript",
        "icon": "$(preview)"
      },
      {
        "command": "holoscript.openPreviewToSide",
        "title": "Open Preview to the Side",
        "category": "HoloScript",
        "icon": "$(open-preview)"
      },
      {
        "command": "holoscript.agent.createFile",
        "title": "Agent: Create HoloScript File",
        "category": "HoloScript"
      },
      {
        "command": "holoscript.agent.generateObject",
        "title": "Agent: Generate Object from Description",
        "category": "HoloScript"
      },
      {
        "command": "holoscript.agent.analyzeScene",
        "title": "Agent: Analyze Current Scene",
        "category": "HoloScript"
      },
      {
        "command": "holoscript.agent.insertCode",
        "title": "Agent: Insert Code at Cursor",
        "category": "HoloScript"
      },
      {
        "command": "holoscript.agent.openPreview",
        "title": "Agent: Open Preview",
        "category": "HoloScript"
      },
      {
        "command": "holoscript.agent.addTrait",
        "title": "Agent: Add Trait to Object",
        "category": "HoloScript"
      },
      {
        "command": "holoscript.agent.listTraits",
        "title": "Agent: List Available Traits",
        "category": "HoloScript"
      },
      {
        "command": "holoscript.agent.validate",
        "title": "Agent: Validate Syntax",
        "category": "HoloScript"
      },
      {
        "command": "holoscript.agent.status",
        "title": "Agent: Get Extension Status",
        "category": "HoloScript"
      },
      {
        "command": "holoscript.mcp.status",
        "title": "MCP: Show Connectivity Status",
        "category": "HoloScript"
      },
      {
        "command": "holoscript.createFirstScene",
        "title": "Create First Scene",
        "category": "HoloScript",
        "icon": "$(new-file)"
      },
      {
        "command": "holoscript.openExamples",
        "title": "Open Examples",
        "category": "HoloScript",
        "icon": "$(folder-library)"
      },
      {
        "command": "holoscript.showWalkthrough",
        "title": "Show Getting Started",
        "category": "HoloScript",
        "icon": "$(book)"
      },
      {
        "command": "holoscript.openDocumentation",
        "title": "Open Documentation",
        "category": "HoloScript",
        "icon": "$(question)"
      },
      {
        "command": "holoscript.openMarketplace",
        "title": "Open Trait Marketplace",
        "category": "HoloScript",
        "icon": "$(package)"
      },
      {
        "command": "holoscript.validate",
        "title": "Validate Syntax",
        "category": "HoloScript",
        "icon": "$(check)"
      },
      {
        "command": "holoscript.collaboration.start",
        "title": "Start Collaboration Session",
        "category": "HoloScript",
        "icon": "$(broadcast)"
      },
      {
        "command": "holoscript.collaboration.join",
        "title": "Join Collaboration Session",
        "category": "HoloScript",
        "icon": "$(plug)"
      },
      {
        "command": "holoscript.collaboration.end",
        "title": "End Collaboration Session",
        "category": "HoloScript",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "holoscript.collaboration.share",
        "title": "Share Collaboration Link",
        "category": "HoloScript",
        "icon": "$(link)"
      },
      {
        "command": "holoscript.collaboration.showParticipants",
        "title": "Show Collaboration Participants",
        "category": "HoloScript",
        "icon": "$(organization)"
      },
      {
        "command": "holoscript.collaboration.addComment",
        "title": "Add Inline Comment",
        "category": "HoloScript",
        "icon": "$(comment)"
      },
      {
        "command": "holoscript.collaboration.lockSection",
        "title": "Lock Section for Editing",
        "category": "HoloScript",
        "icon": "$(lock)"
      },
      {
        "command": "holoscript.collaboration.toggle",
        "title": "Toggle Collaboration",
        "category": "HoloScript",
        "icon": "$(live-share)"
      },
      {
        "command": "holoscript.showSemanticDiff",
        "title": "Show Semantic Diff",
        "category": "HoloScript Git",
        "icon": "$(diff)"
      },
      {
        "command": "holoscript.show3DDiff",
        "title": "Show 3D Diff Preview",
        "category": "HoloScript Git",
        "icon": "$(preview)"
      },
      {
        "command": "holoscript.toggleDiffDecorations",
        "title": "Toggle Diff Decorations",
        "category": "HoloScript Git",
        "icon": "$(eye)"
      },
      {
        "command": "holoscript.blameLine",
        "title": "Blame Line",
        "category": "HoloScript Git",
        "icon": "$(git-commit)"
      },
      {
        "command": "holoscript.showFileHistory",
        "title": "Show File History",
        "category": "HoloScript Git",
        "icon": "$(history)"
      },
      {
        "command": "holoscript.stageWithValidation",
        "title": "Stage with Validation",
        "category": "HoloScript Git",
        "icon": "$(add)"
      },
      {
        "command": "holoscript.commitSemantic",
        "title": "Commit with Semantic Message",
        "category": "HoloScript Git",
        "icon": "$(check)"
      },
      {
        "command": "holoscript.showGitStatus",
        "title": "Show HoloScript Git Status",
        "category": "HoloScript Git",
        "icon": "$(source-control)"
      },
      {
        "command": "holoscript.resolveMergeConflicts",
        "title": "Resolve Merge Conflicts",
        "category": "HoloScript Git",
        "icon": "$(merge)"
      },
      {
        "command": "holoscript.runPreCommitHook",
        "title": "Run Pre-Commit Hook",
        "category": "HoloScript Git",
        "icon": "$(run)"
      }
    ],
    "customEditors": [
      {
        "viewType": "holoscript.smartAssetViewer",
        "displayName": "Smart Asset Viewer",
        "selector": [
          {
            "filenamePattern": "*.hsa"
          }
        ],
        "priority": "default"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "holoscript.openPreviewToSide",
          "when": "editorLangId == holoscript || editorLangId == holoscriptplus",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "holoscript.openPreview",
          "when": "editorLangId == holoscript || editorLangId == holoscriptplus",
          "group": "holoscript"
        },
        {
          "command": "holoscript.showSemanticDiff",
          "when": "editorLangId == holoscript || editorLangId == holoscriptplus",
          "group": "holoscript-git@1"
        },
        {
          "command": "holoscript.blameLine",
          "when": "editorLangId == holoscript || editorLangId == holoscriptplus",
          "group": "holoscript-git@2"
        },
        {
          "command": "holoscript.show3DDiff",
          "when": "editorLangId == holoscript || editorLangId == holoscriptplus",
          "group": "holoscript-git@3"
        }
      ],
      "explorer/context": [
        {
          "command": "holoscript.showSemanticDiff",
          "when": "resourceExtname == .holo || resourceExtname == .hs",
          "group": "holoscript-git"
        },
        {
          "command": "holoscript.showFileHistory",
          "when": "resourceExtname == .holo || resourceExtname == .hs",
          "group": "holoscript-git"
        }
      ],
      "commandPalette": [
        {
          "command": "holoscript.openPreview",
          "when": "editorLangId == holoscript || editorLangId == holoscriptplus"
        },
        {
          "command": "holoscript.openPreviewToSide",
          "when": "editorLangId == holoscript || editorLangId == holoscriptplus"
        }
      ]
    },
    "keybindings": [
      {
        "command": "holoscript.openPreviewToSide",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorLangId == holoscript || editorLangId == holoscriptplus"
      },
      {
        "command": "holoscript.openPreview",
        "key": "ctrl+k v",
        "mac": "cmd+k v",
        "when": "editorLangId == holoscript || editorLangId == holoscriptplus"
      }
    ],
    "walkthroughs": [
      {
        "id": "holoscript-getting-started",
        "title": "Getting Started with HoloScript",
        "description": "Learn to build VR/AR experiences with HoloScript in 5 minutes",
        "steps": [
          {
            "id": "welcome",
            "title": "Welcome to HoloScript",
            "description": "The first spatial programming language for VR/AR development.\n\n[Open Welcome Guide](command:markdown.showPreview?%5B%22walkthroughs/getting-started/01-welcome.md%22%5D)",
            "media": {
              "markdown": "walkthroughs/getting-started/01-welcome.md"
            }
          },
          {
            "id": "createFile",
            "title": "Create Your First Scene",
            "description": "Create a `.holo` file and write your first VR scene.\n\n[Create Your First Scene](command:holoscript.createFirstScene)",
            "media": {
              "markdown": "walkthroughs/getting-started/02-first-scene.md"
            },
            "completionEvents": [
              "onFileCreated:*.holo"
            ]
          },
          {
            "id": "learnTraits",
            "title": "Add VR Traits",
            "description": "Use `@grabbable`, `@physics`, `@glowing` to add VR interactivity.",
            "media": {
              "markdown": "walkthroughs/getting-started/03-traits.md"
            }
          },
          {
            "id": "preview",
            "title": "Preview Your Scene",
            "description": "See your scene in 3D with live preview.\n\n[Open Preview](command:holoscript.openPreviewToSide)",
            "media": {
              "markdown": "walkthroughs/getting-started/04-preview.md"
            },
            "completionEvents": [
              "onCommand:holoscript.openPreviewToSide",
              "onCommand:holoscript.openPreview"
            ]
          },
          {
            "id": "aiIntegration",
            "title": "AI Integration",
            "description": "Use Claude, GPT, or Copilot to generate HoloScript code.",
            "media": {
              "markdown": "walkthroughs/getting-started/05-ai-integration.md"
            }
          },
          {
            "id": "nextSteps",
            "title": "Next Steps",
            "description": "Explore examples, documentation, and the community.",
            "media": {
              "markdown": "walkthroughs/getting-started/06-next-steps.md"
            }
          }
        ]
      }
    ],
    "debuggers": [
      {
        "type": "holoscript-debug",
        "label": "HoloScript Debug",
        "program": "./node_modules/@holoscript/lsp/dist/debugServer.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "The absolute path to the .holo or .hs file to debug.",
                "default": "${file}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "holoscript-debug",
            "request": "launch",
            "name": "Debug HoloScript",
            "program": "${file}",
            "stopOnEntry": true
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --production",
    "esbuild-base": "node esbuild.js",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "compile": "tsc -p ./",
    "build": "npm run esbuild",
    "watch": "npm run esbuild-watch",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish",
    "test": "vitest run"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.32.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.3.3",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@holoscript/sdk": "workspace:^",
    "@holoscript/formatter": "workspace:*",
    "@types/adm-zip": "^0.5.7",
    "adm-zip": "^0.5.16",
    "vscode-languageclient": "^9.0.1",
    "yjs": "^13.6.15",
    "y-websocket": "^2.0.3"
  }
}
