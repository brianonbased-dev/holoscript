{
  "name": "@holoscript/playcanvas-adapter",
  "version": "1.0.0",
  "description": "PlayCanvas rendering adapter for HoloScript",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "holoscript",
    "playcanvas",
    "3d",
    "vr",
    "xr",
    "webgl",
    "webgpu"
  ],
  "author": "HoloScript Team",
  "license": "MIT",
  "peerDependencies": {
    "playcanvas": ">=1.60.0"
  },
  "dependencies": {
    "@holoscript/core": "workspace:*"
  },
  "devDependencies": {
    "playcanvas": "^1.70.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
