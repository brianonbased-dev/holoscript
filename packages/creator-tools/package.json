{
  "name": "@holoscript/creator-tools",
  "version": "1.0.0",
  "description": "Phase 6: Visual Creator Tools for HoloScript+ - Trait Editor and Real-Time Preview Dashboard",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./editor": {
      "import": "./dist/components/TraitEditor.js",
      "types": "./dist/components/TraitEditor.d.ts"
    },
    "./preview": {
      "import": "./dist/components/PreviewDashboard.js",
      "types": "./dist/components/PreviewDashboard.d.ts"
    },
    "./demo": {
      "import": "./dist/Phase6CompleteDemo.js",
      "types": "./dist/Phase6CompleteDemo.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:lib": "tsup src/index.ts src/components/TraitEditor.tsx src/components/PreviewDashboard.tsx src/Phase6CompleteDemo.tsx --format esm,cjs --dts",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "format": "prettier --write src"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "tsup": "^7.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "holoscript",
    "vr",
    "ar",
    "graphics",
    "creator-tools",
    "trait-editor",
    "visual-editor",
    "real-time-preview",
    "multi-device",
    "performance",
    "react",
    "typescript"
  ],
  "author": "HoloScript+ Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HoloScript/HoloScript.git",
    "directory": "packages/creator-tools"
  },
  "bugs": {
    "url": "https://github.com/HoloScript/HoloScript/issues"
  },
  "homepage": "https://github.com/HoloScript/HoloScript#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
