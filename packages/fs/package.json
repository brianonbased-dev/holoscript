{
  "name": "@holoscript/fs",
  "version": "1.0.0",
  "description": "File system library for HoloScript Plus",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./path": {
      "types": "./dist/path.d.ts",
      "import": "./dist/path.js"
    },
    "./watch": {
      "types": "./dist/watch.d.ts",
      "import": "./dist/watch.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5"
  },
  "peerDependencies": {
    "@holoscript/std": "^1.0.0"
  },
  "keywords": [
    "holoscript",
    "hololand",
    "filesystem",
    "file-io"
  ],
  "author": "Hololand Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hololand/hololand.git",
    "directory": "packages/holoscript-fs"
  }
}
