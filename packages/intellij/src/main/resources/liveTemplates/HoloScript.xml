<templateSet group="HoloScript">
    <template name="orb" value="orb $NAME$ {&#10;  $END$&#10;}" description="Create a new orb object" toReformat="true" toShortenFQNames="false">
        <variable name="NAME" expression="" defaultValue="&quot;myObject&quot;" alwaysStopAt="true"/>
        <context>
            <option name="HOLOSCRIPT" value="true"/>
        </context>
    </template>
    
    <template name="grab" value="orb $NAME$ {&#10;  @grabbable&#10;  @collidable&#10;  &#10;  geometry: &quot;$GEOMETRY$&quot;&#10;  &#10;  onGrab: {&#10;    $END$&#10;  }&#10;}" description="Create a grabbable object" toReformat="true" toShortenFQNames="false">
        <variable name="NAME" expression="" defaultValue="&quot;grabbableObject&quot;" alwaysStopAt="true"/>
        <variable name="GEOMETRY" expression="" defaultValue="&quot;cube&quot;" alwaysStopAt="true"/>
        <context>
            <option name="HOLOSCRIPT" value="true"/>
        </context>
    </template>
    
    <template name="anim" value="animation $NAME$ {&#10;  property: &quot;$PROPERTY$&quot;&#10;  from: $FROM$&#10;  to: $TO$&#10;  duration: $DURATION$&#10;  easing: &quot;easeInOut&quot;&#10;  $END$&#10;}" description="Create an animation block" toReformat="true" toShortenFQNames="false">
        <variable name="NAME" expression="" defaultValue="&quot;bounce&quot;" alwaysStopAt="true"/>
        <variable name="PROPERTY" expression="" defaultValue="&quot;position.y&quot;" alwaysStopAt="true"/>
        <variable name="FROM" expression="" defaultValue="0" alwaysStopAt="true"/>
        <variable name="TO" expression="" defaultValue="1" alwaysStopAt="true"/>
        <variable name="DURATION" expression="" defaultValue="1000" alwaysStopAt="true"/>
        <context>
            <option name="HOLOSCRIPT" value="true"/>
        </context>
    </template>
    
    <template name="on" value="$EVENT$: {&#10;  $END$&#10;}" description="Create an event handler" toReformat="true" toShortenFQNames="false">
        <variable name="EVENT" expression="" defaultValue="&quot;onGrab&quot;" alwaysStopAt="true"/>
        <context>
            <option name="HOLOSCRIPT" value="true"/>
        </context>
    </template>
    
    <template name="comp" value="composition &quot;$NAME$&quot; {&#10;  environment {&#10;    skybox: &quot;$SKYBOX$&quot;&#10;    ambient_light: 0.5&#10;  }&#10;  &#10;  $END$&#10;}" description="Create a composition" toReformat="true" toShortenFQNames="false">
        <variable name="NAME" expression="" defaultValue="&quot;My Scene&quot;" alwaysStopAt="true"/>
        <variable name="SKYBOX" expression="" defaultValue="&quot;default&quot;" alwaysStopAt="true"/>
        <context>
            <option name="HOLOSCRIPT" value="true"/>
        </context>
    </template>
    
    <template name="template" value="template &quot;$NAME$&quot; {&#10;  state {&#10;    $STATE$&#10;  }&#10;  &#10;  $END$&#10;}" description="Create a template" toReformat="true" toShortenFQNames="false">
        <variable name="NAME" expression="" defaultValue="&quot;MyTemplate&quot;" alwaysStopAt="true"/>
        <variable name="STATE" expression="" defaultValue="" alwaysStopAt="true"/>
        <context>
            <option name="HOLOSCRIPT" value="true"/>
        </context>
    </template>
    
    <template name="state" value="state {&#10;  $NAME$: $VALUE$&#10;  $END$&#10;}" description="Create a state block" toReformat="true" toShortenFQNames="false">
        <variable name="NAME" expression="" defaultValue="&quot;value&quot;" alwaysStopAt="true"/>
        <variable name="VALUE" expression="" defaultValue="0" alwaysStopAt="true"/>
        <context>
            <option name="HOLOSCRIPT" value="true"/>
        </context>
    </template>
    
    <template name="physics" value="physics: {&#10;  type: &quot;$TYPE$&quot;&#10;  mass: $MASS$&#10;  restitution: $RESTITUTION$&#10;  friction: $FRICTION$&#10;}" description="Add physics configuration" toReformat="true" toShortenFQNames="false">
        <variable name="TYPE" expression="" defaultValue="&quot;dynamic&quot;" alwaysStopAt="true"/>
        <variable name="MASS" expression="" defaultValue="1.0" alwaysStopAt="true"/>
        <variable name="RESTITUTION" expression="" defaultValue="0.5" alwaysStopAt="true"/>
        <variable name="FRICTION" expression="" defaultValue="0.3" alwaysStopAt="true"/>
        <context>
            <option name="HOLOSCRIPT" value="true"/>
        </context>
    </template>
</templateSet>
