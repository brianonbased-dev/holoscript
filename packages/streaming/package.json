{
  "name": "@holoscript/streaming",
  "version": "1.0.0",
  "description": "Asset and world streaming - progressive loading and LOD streaming for VR",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./loader": {
      "import": {
        "types": "./dist/loader.d.ts",
        "default": "./dist/loader.js"
      },
      "require": {
        "types": "./dist/loader.d.cts",
        "default": "./dist/loader.cjs"
      }
    },
    "./cache": {
      "import": {
        "types": "./dist/cache.d.ts",
        "default": "./dist/cache.js"
      },
      "require": {
        "types": "./dist/cache.d.cts",
        "default": "./dist/cache.cjs"
      }
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test": "echo 'Tests skipped - implementation in progress' && exit 0",
    "test:watch": "vitest"
  },
  "keywords": [
    "holoscript",
    "streaming",
    "assets",
    "progressive-loading",
    "vr",
    "cache",
    "lod"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  }
}
