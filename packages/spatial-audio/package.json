{
  "name": "@holoscript/spatial-audio",
  "version": "1.0.0",
  "description": "3D positional audio with HRTF and room acoustics for HoloScript VR/AR",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./context": {
      "types": "./dist/context.d.ts",
      "import": "./dist/context.js",
      "require": "./dist/context.cjs"
    },
    "./hrtf": {
      "types": "./dist/hrtf.d.ts",
      "import": "./dist/hrtf.js",
      "require": "./dist/hrtf.cjs"
    },
    "./room": {
      "types": "./dist/room.d.ts",
      "import": "./dist/room.js",
      "require": "./dist/room.cjs"
    },
    "./emitter": {
      "types": "./dist/emitter.d.ts",
      "import": "./dist/emitter.js",
      "require": "./dist/emitter.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "holoscript",
    "spatial-audio",
    "3d-audio",
    "hrtf",
    "binaural",
    "vr",
    "ar",
    "webxr",
    "room-acoustics"
  ],
  "author": "HoloScript Team",
  "license": "MIT",
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^2.0.0"
  },
  "peerDependencies": {
    "@holoscript/core": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@holoscript/core": {
      "optional": true
    }
  }
}
