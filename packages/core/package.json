{
  "name": "@holoscript/core",
  "version": "2.1.0",
  "description": "HoloScript+: VR language with declarative syntax, state management, reactive traits, and VR interactions. Full backward compatible with original HoloScript.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./parser": {
      "types": "./dist/parser.d.ts",
      "import": "./dist/parser.js",
      "require": "./dist/parser.cjs"
    },
    "./runtime": {
      "types": "./dist/runtime.d.ts",
      "import": "./dist/runtime.js",
      "require": "./dist/runtime.cjs"
    },
    "./type-checker": {
      "types": "./dist/type-checker.d.ts",
      "import": "./dist/type-checker.js",
      "require": "./dist/type-checker.cjs"
    },
    "./debugger": {
      "types": "./dist/debugger.d.ts",
      "import": "./dist/debugger.js",
      "require": "./dist/debugger.cjs"
    }
  },
  "scripts": {
    "build": "tsup && tsc --emitDeclarationOnly",
    "dev": "tsup --watch",
    "test": "vitest run --pool=forks --poolOptions.forks.singleFork",
    "test:watch": "vitest"
  },
  "keywords": [
    "holoscript",
    "vr",
    "virtual-reality",
    "parser",
    "ast",
    "runtime",
    "spatial-programming",
    "voice-commands",
    "gesture-control"
  ],
  "author": "Brian X Base Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/brianonbased-dev/Holoscript.git",
    "directory": "packages/core"
  },
  "dependencies": {
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0"
  },
  "devDependencies": {
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.4",
    "tsup": "^8.0.1",
    "typedoc": "^0.28.16",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  }
}
