// Basic trait testing fixture

composition "TraitsBasic" {
  template "GrabbableBall" {
    @grabbable
    geometry: "sphere"
    color: "#00ff00"
  }

  template "ThrowableCube" {
    @grabbable
    @throwable
    geometry: "box"
    color: "#0000ff"
  }

  template "InteractiveSphere" {
    @grabbable
    @hoverable
    @pointable
    geometry: "sphere"
    color: "#ffff00"
  }

  object "GrabbableBall" using "GrabbableBall" {
    position: [0, 1, 0]
  }

  object "ThrowableCube" using "ThrowableCube" {
    position: [2, 1, 0]
  }

  object "Interactive" using "InteractiveSphere" {
    position: [-2, 1, 0]
  }
}
