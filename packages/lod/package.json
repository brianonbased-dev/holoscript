{
  "name": "@holoscript/lod",
  "version": "1.0.0",
  "description": "Level of Detail system for VR performance optimization",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./manager": {
      "import": {
        "types": "./dist/manager.d.ts",
        "default": "./dist/manager.js"
      },
      "require": {
        "types": "./dist/manager.d.cts",
        "default": "./dist/manager.cjs"
      }
    },
    "./culling": {
      "import": {
        "types": "./dist/culling.d.ts",
        "default": "./dist/culling.js"
      },
      "require": {
        "types": "./dist/culling.d.cts",
        "default": "./dist/culling.cjs"
      }
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "echo 'No tests yet' && exit 0",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["holoscript", "lod", "level-of-detail", "vr", "optimization", "culling"],
  "license": "MIT",
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
