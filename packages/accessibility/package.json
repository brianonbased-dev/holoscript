{
  "name": "@holoscript/accessibility",
  "version": "1.0.0",
  "description": "W3C XR Accessibility utilities for HoloScript - haptics, screen readers, motor accommodations, colorblind modes",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./haptics": {
      "types": "./dist/haptics.d.ts",
      "import": "./dist/haptics.js",
      "require": "./dist/haptics.cjs"
    },
    "./screenreader": {
      "types": "./dist/screenreader.d.ts",
      "import": "./dist/screenreader.js",
      "require": "./dist/screenreader.cjs"
    },
    "./motor": {
      "types": "./dist/motor.d.ts",
      "import": "./dist/motor.js",
      "require": "./dist/motor.cjs"
    },
    "./vision": {
      "types": "./dist/vision.d.ts",
      "import": "./dist/vision.js",
      "require": "./dist/vision.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "echo 'No tests yet' && exit 0",
    "lint": "eslint src",
    "clean": "rimraf dist"
  },
  "keywords": [
    "holoscript",
    "accessibility",
    "a11y",
    "xr",
    "vr",
    "ar",
    "haptics",
    "w3c"
  ],
  "author": "HoloScript Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.5.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "@holoscript/core": "^2.0.0",
    "three": "^0.170.0"
  }
}
