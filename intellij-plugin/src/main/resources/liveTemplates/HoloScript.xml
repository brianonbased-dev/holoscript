<templateSet group="HoloScript">
  <template name="comp" value="composition &quot;$NAME$&quot; {&#10;  $END$&#10;}" description="Create a new composition" toReformat="true" toShortenFQNames="true">
    <variable name="NAME" expression="" defaultValue="&quot;My Scene&quot;" alwaysStopAt="true"/>
    <context>
      <option name="HOLOSCRIPT" value="true"/>
    </context>
  </template>

  <template name="orb" value="orb $NAME$ {&#10;  $TRAITS$&#10;  position: [$X$, $Y$, $Z$]&#10;  $END$&#10;}" description="Create an orb object" toReformat="true" toShortenFQNames="true">
    <variable name="NAME" expression="" defaultValue="&quot;myOrb&quot;" alwaysStopAt="true"/>
    <variable name="TRAITS" expression="" defaultValue="&quot;@grabbable&quot;" alwaysStopAt="true"/>
    <variable name="X" expression="" defaultValue="&quot;0&quot;" alwaysStopAt="true"/>
    <variable name="Y" expression="" defaultValue="&quot;1.5&quot;" alwaysStopAt="true"/>
    <variable name="Z" expression="" defaultValue="&quot;-2&quot;" alwaysStopAt="true"/>
    <context>
      <option name="HOLOSCRIPT" value="true"/>
    </context>
  </template>

  <template name="entity" value="entity $NAME$ {&#10;  $TRAITS$&#10;  $END$&#10;}" description="Create an entity" toReformat="true" toShortenFQNames="true">
    <variable name="NAME" expression="" defaultValue="&quot;myEntity&quot;" alwaysStopAt="true"/>
    <variable name="TRAITS" expression="" defaultValue="&quot;&quot;" alwaysStopAt="true"/>
    <context>
      <option name="HOLOSCRIPT" value="true"/>
    </context>
  </template>

  <template name="@grab" value="@grabbable" description="Add grabbable trait" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="HOLOSCRIPT" value="true"/>
    </context>
  </template>

  <template name="@phys" value="@physics {&#10;  mass: $MASS$&#10;  friction: $FRICTION$&#10;}" description="Add physics trait" toReformat="true" toShortenFQNames="true">
    <variable name="MASS" expression="" defaultValue="&quot;1.0&quot;" alwaysStopAt="true"/>
    <variable name="FRICTION" expression="" defaultValue="&quot;0.5&quot;" alwaysStopAt="true"/>
    <context>
      <option name="HOLOSCRIPT" value="true"/>
    </context>
  </template>

  <template name="@net" value="@networked&#10;@synced { interpolate: true }" description="Add networking traits" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="HOLOSCRIPT" value="true"/>
    </context>
  </template>

  <template name="onGrab" value="onGrab: {&#10;  $END$&#10;}" description="Add onGrab handler" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="HOLOSCRIPT" value="true"/>
    </context>
  </template>

  <template name="onClick" value="onClick: {&#10;  $END$&#10;}" description="Add onClick handler" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="HOLOSCRIPT" value="true"/>
    </context>
  </template>

  <template name="npc" value="npc &quot;$NAME$&quot; {&#10;  npc_type: &quot;$TYPE$&quot;&#10;  dialogue_tree: &quot;$DIALOGUE$&quot;&#10;  $END$&#10;}" description="Create an NPC" toReformat="true" toShortenFQNames="true">
    <variable name="NAME" expression="" defaultValue="&quot;Shopkeeper&quot;" alwaysStopAt="true"/>
    <variable name="TYPE" expression="" defaultValue="&quot;vendor&quot;" alwaysStopAt="true"/>
    <variable name="DIALOGUE" expression="" defaultValue="&quot;shop_intro&quot;" alwaysStopAt="true"/>
    <context>
      <option name="HOLOSCRIPT" value="true"/>
    </context>
  </template>

  <template name="quest" value="quest &quot;$NAME$&quot; {&#10;  giver: &quot;$GIVER$&quot;&#10;  level: $LEVEL$&#10;  type: &quot;$TYPE$&quot;&#10;  objectives: [&#10;    { id: &quot;$OBJ_ID$&quot;, type: &quot;$OBJ_TYPE$&quot;, target: &quot;$TARGET$&quot;, count: $COUNT$ }&#10;  ]&#10;  rewards: { experience: $XP$, gold: $GOLD$ }&#10;}" description="Create a quest" toReformat="true" toShortenFQNames="true">
    <variable name="NAME" expression="" defaultValue="&quot;My Quest&quot;" alwaysStopAt="true"/>
    <variable name="GIVER" expression="" defaultValue="&quot;NPC Name&quot;" alwaysStopAt="true"/>
    <variable name="LEVEL" expression="" defaultValue="&quot;1&quot;" alwaysStopAt="true"/>
    <variable name="TYPE" expression="" defaultValue="&quot;defeat&quot;" alwaysStopAt="true"/>
    <variable name="OBJ_ID" expression="" defaultValue="&quot;objective_1&quot;" alwaysStopAt="true"/>
    <variable name="OBJ_TYPE" expression="" defaultValue="&quot;defeat&quot;" alwaysStopAt="true"/>
    <variable name="TARGET" expression="" defaultValue="&quot;enemy&quot;" alwaysStopAt="true"/>
    <variable name="COUNT" expression="" defaultValue="&quot;10&quot;" alwaysStopAt="true"/>
    <variable name="XP" expression="" defaultValue="&quot;500&quot;" alwaysStopAt="true"/>
    <variable name="GOLD" expression="" defaultValue="&quot;100&quot;" alwaysStopAt="true"/>
    <context>
      <option name="HOLOSCRIPT" value="true"/>
    </context>
  </template>

  <template name="dialogue" value="dialogue &quot;$ID$&quot; {&#10;  character: &quot;$CHARACTER$&quot;&#10;  emotion: &quot;$EMOTION$&quot;&#10;  content: &quot;$CONTENT$&quot;&#10;  options: [&#10;    { text: &quot;$OPTION$&quot;, next: &quot;$NEXT$&quot; }&#10;  ]&#10;}" description="Create a dialogue" toReformat="true" toShortenFQNames="true">
    <variable name="ID" expression="" defaultValue="&quot;dialogue_1&quot;" alwaysStopAt="true"/>
    <variable name="CHARACTER" expression="" defaultValue="&quot;NPC Name&quot;" alwaysStopAt="true"/>
    <variable name="EMOTION" expression="" defaultValue="&quot;neutral&quot;" alwaysStopAt="true"/>
    <variable name="CONTENT" expression="" defaultValue="&quot;Hello, traveler!&quot;" alwaysStopAt="true"/>
    <variable name="OPTION" expression="" defaultValue="&quot;What do you need?&quot;" alwaysStopAt="true"/>
    <variable name="NEXT" expression="" defaultValue="&quot;dialogue_2&quot;" alwaysStopAt="true"/>
    <context>
      <option name="HOLOSCRIPT" value="true"/>
    </context>
  </template>

  <template name="template" value="template &quot;$NAME$&quot; {&#10;  $END$&#10;}" description="Create a reusable template" toReformat="true" toShortenFQNames="true">
    <variable name="NAME" expression="" defaultValue="&quot;MyTemplate&quot;" alwaysStopAt="true"/>
    <context>
      <option name="HOLOSCRIPT" value="true"/>
    </context>
  </template>

  <template name="using" value="using &quot;$TEMPLATE$&quot; {&#10;  $END$&#10;}" description="Instantiate a template" toReformat="true" toShortenFQNames="true">
    <variable name="TEMPLATE" expression="" defaultValue="&quot;TemplateName&quot;" alwaysStopAt="true"/>
    <context>
      <option name="HOLOSCRIPT" value="true"/>
    </context>
  </template>
</templateSet>
