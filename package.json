{
  "name": "holoscript",
  "version": "3.4.0",
  "private": true,
  "description": "HoloScript - Open source VR scene description language",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm --filter core build && pnpm --filter !core build",
    "build:parallel": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test:coverage",
    "lint": "eslint packages/*/src/**/*.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "bench": "pnpm --filter @holoscript/benchmark bench",
    "bench:ci": "pnpm --filter @holoscript/benchmark bench:ci",
    "clean": "pnpm -r exec rm -rf dist",
    "types:generate": "bash scripts/generate-types.sh",
    "types:generate:win": "powershell -File scripts/generate-types.ps1",
    "version:patch": "node scripts/sync-versions.js patch",
    "version:minor": "node scripts/sync-versions.js minor",
    "version:major": "node scripts/sync-versions.js major",
    "version:prerelease": "node scripts/sync-versions.js prerelease",
    "publish": "pnpm -r publish --access public"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^9.5.1",
    "@stryker-mutator/typescript-checker": "^9.5.1",
    "@stryker-mutator/vitest-runner": "^9.5.1",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Brian X Base Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/brianonbased-dev/Holoscript.git"
  }
}
